# ZooKeeper URL (used for leader election amongst masters)
ZK="<%= scope.lookupvar('mesos::zk') %>"

# Human readable name for the cluster, displayed in the webui
CLUSTER="<%= scope.lookupvar('mesos::cluster') %>"

# IP address to listen on (in case that you start master on this node, it will bind to this address)
IP="<%= scope.lookupvar('ipaddress') %>"

# Port to listen on (default: 5050)
PORT=<%= scope.lookupvar('mesos::master_port') %>

# Path to a file with a list of slaves (one per line) to advertise offers for;
# should be of the form: file://path/to/file (default: *)
WHITELIST=<%= scope.lookupvar('mesos::whitelist') %>
