# if zookeeper URL is not specified, slaves will connect directly
# to specified master (not a fault-tolerant mode)
<% if scope.lookupvar('mesos::params::master').empty? -%>
  MASTER="<%= scope.lookupvar('mesos::params::master') %>:<%= scope.lookupvar('mesos::params::master_port') %>"
<% else -%>
  MASTER="<%= scope.lookupvar('mesos::params::zk') %>"
<% end -%>
# public slave's ip, must be unique in mesos cluster
IP="<%= scope.lookupvar('ipaddress') %>"
PORT=<%= scope.lookupvar('mesos::params::slave_port') %>
WORKDIR=/tmp/mesos
#OPTS="--hadoop_home=/usr/lib/hadoop-0.20/"

